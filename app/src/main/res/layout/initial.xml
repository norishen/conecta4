<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/initial" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_vertical"
        android:orientation="vertical" >

        <Button
            android:layout_width="@dimen/menu0Buttom"
            android:layout_height="wrap_content"
            android:text="@string/menu0Start"
            android:id="@+id/initialB1"
            android:layout_marginBottom="@dimen/menu0Margin"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="@dimen/menu0Buttom"
            android:layout_height="wrap_content"
            android:text="@string/menu0Preferences"
            android:id="@+id/initialB2"
            android:layout_marginBottom="@dimen/menu0Margin"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="@dimen/menu0Buttom"
            android:layout_height="wrap_content"
            android:text="@string/menu0Exit"
            android:id="@+id/initialB3"
            android:layout_marginBottom="@dimen/menu0Margin"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</FrameLayout>